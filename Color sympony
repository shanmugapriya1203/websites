<body>

    <div class="container">
        <header>
            <h1>Color Symphony</h1>
            <p class="subtitle">Click, explore, and let creativity flow</p>
        </header>

        <div class="magic-box">
            <h2 class="section-title">🎨 Mood Colors</h2>
            <p style="color: rgba(255,255,255,0.8); text-align: center; margin-bottom: 20px;">
                Click a color to change the background and get inspired!
            </p>
            <div class="color-grid" id="colorGrid">
                <div class="color-circle" style="background: linear-gradient(45deg, #ff6b6b, #ff8e8e);"
                data-bg="linear-gradient(45deg, #ff6b6b, #ff8e8e)" data-mood="energetic">Energy</div>
                <div class="color-circle" style="background: linear-gradient(45deg, #4ecdc4, #44a08d);" 
                data-bg="linear-gradient(45deg, #4ecdc4, #44a08d)" data-mood="calm">Calm</div>
                <div class="color-circle" style="background: linear-gradient(45deg, #ffd93d, #ff6b9d);" 
                data-bg="linear-gradient(45deg, #ffd93d, #ff6b9d)" data-mood="joyful">Joy</div>
                <div class="color-circle" style="background: linear-gradient(45deg, #a8edea, #fed6e3);"
                data-bg="linear-gradient(45deg, #a8edea, #fed6e3)" data-mood="dreamy">Dream</div>
                <div class="color-circle" style="background: linear-gradient(45deg, #ff9a9e, #fecfef);"
                data-bg="linear-gradient(45deg, #ff9a9e, #fecfef)" data-mood="romantic">Love</div>
                <div class="color-circle" style="background: linear-gradient(45deg, #667eea, #764ba2);"
                data-bg="linear-gradient(45deg, #667eea, #764ba2)" data-mood="mysterious">Mystery</div>
            </div>
        </div>

        <div class="magic-box">
            <h2 class="section-title">✨ Daily Inspiration</h2>
            <div class="quote-display" id="quoteDisplay">
                "Click the button below to get inspired!"
            </div>
            <div style="text-align: center;">
                <button class="button" onclick="getInspiration()">Get Inspired</button>
                <button class="button" onclick="surprise()">Surprise Me!</button>
            </div>
        </div>
    </div>

    <script>
        const quotes = [
            "Creativity is intelligence having fun. - Albert Einstein",
            "The best way to predict the future is to create it. - Peter Drucker",
            "Every moment is a fresh beginning. - T.S. Eliot",
            "Be yourself; everyone else is already taken. - Oscar Wilde",
            "Life is what happens when you're busy making other plans. - John Lennon",
            "Dream big and dare to fail. - Norman Vaughan",
            "The only impossible journey is the one you never begin. - Tony Robbins",
            "In the middle of difficulty lies opportunity. - Albert Einstein"
        ];

        const surprises = [
            "🌟 You're awesome just the way you are!",
            "🚀 Today is full of possibilities!",
            "🎨 Your creativity has no limits!",
            "💫 Magic happens when you believe!",
            "🌈 You bring color to the world!",
            "⭐ Every day is a new adventure!"
        ];

        // Color changing functionality
        document.getElementById('colorGrid').addEventListener('click', function(e) {
            if (e.target.classList.contains('color-circle')) {
                const newBg = e.target.dataset.bg;
                const mood = e.target.dataset.mood;
                
                document.body.style.background = newBg;
                
                // Add a subtle animation
                document.body.style.transition = 'background 1s ease';
                
                // Show mood message
                showMessage(`Feeling ${mood} today! 🎨`);
            }
        });

        function getInspiration() {
            const randomQuote = quotes[Math.floor(Math.random() * quotes.length)];
            const quoteDisplay = document.getElementById('quoteDisplay');
            
            quoteDisplay.style.opacity = '0';
            
            setTimeout(() => {
                quoteDisplay.textContent = randomQuote;
                quoteDisplay.style.opacity = '1';
            }, 300);
        }

        function surprise() {
            const randomSurprise = surprises[Math.floor(Math.random() * surprises.length)];
            const quoteDisplay = document.getElementById('quoteDisplay');
            
            quoteDisplay.style.opacity = '0';
            
            setTimeout(() => {
                quoteDisplay.innerHTML = `<div style="font-size: 1.3rem; color: #ff6b6b;">${randomSurprise}</div>`;
                quoteDisplay.style.opacity = '1';
            }, 300);
            
            // Add sparkle effect
            createSparkles();
        }

        function showMessage(message) {
            const messageDiv = document.createElement('div');
            messageDiv.textContent = message;
            messageDiv.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: rgba(255,255,255,0.9);
                padding: 15px;
                border-radius: 10px;
                color: #333;
                font-weight: bold;
                z-index: 1000;
                animation: slideIn 0.5s ease;
            `;
            
            document.body.appendChild(messageDiv);
            
            setTimeout(() => {
                messageDiv.remove();
            }, 3000);
        }

        function createSparkles() {
            for (let i = 0; i < 5; i++) {
                const sparkle = document.createElement('div');
                sparkle.textContent = '✨';
                sparkle.style.cssText = `
                    position: fixed;
                    font-size: 2rem;
                    pointer-events: none;
                    z-index: 1000;
                    animation: sparkle 2s ease-out forwards;
                    left: ${Math.random() * 100}%;
                    top: ${Math.random() * 100}%;
                `;
                
                document.body.appendChild(sparkle);
                
                setTimeout(() => sparkle.remove(), 2000);
            }
        }

        // Add CSS animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            
            @keyframes sparkle {
                0% { transform: translateY(0) rotate(0deg); opacity: 1; }
                100% { transform: translateY(-100px) rotate(360deg); opacity: 0; }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
